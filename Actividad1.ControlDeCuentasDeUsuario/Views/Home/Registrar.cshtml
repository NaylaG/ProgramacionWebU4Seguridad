@model Actividad1.ControlDeCuentasDeUsuario.Models.Usuario;
@{
    Layout = "_Layout";
}

<form method="post" asp-action="Registrar" asp-controller="Home">
    <div class="contenedor">

        <div class="datos">
            <h2>Registrar</h2>
            <input type="text" placeholder="Nombre de Usuario" asp-for="Username" /><br />
            <input type="email" placeholder="Correo electrónico" asp-for="Email" /><br />
            <input type="password" placeholder="Elije una contraseña" asp-for="Password" /><br />
            <input type="password" placeholder="Confirmar contraseña" /><br />
            <p class="errores">
                @Html.ValidationSummary()
            </p>
            <input type="submit" value="Registrar" class="boton" />

        </div>
    </div>
</form>
