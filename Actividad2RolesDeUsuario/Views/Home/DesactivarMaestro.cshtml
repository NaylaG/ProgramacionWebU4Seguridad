@model Actividad2RolesDeUsuario.Models.Maestro
@{
    Layout = "_Layout";
}

<form method="post" asp-action="DesactivarMaestro" asp-controller="Home">
    <div class="contenedor">

        <div class="datos">
            <h2>Activar</h2>
            <input type="text" asp-for="Id" hidden />
            <label>Desea desactivar el docente: @Model.Nombre</label>
            <input type="submit" value="Desactivar" class="boton" />
            <a href="~/Home/VerMaestros"><input type="button" value="Cancelar" class="boton" /></a>

        </div>
        @Html.ValidationSummary()
    </div>
</form>
